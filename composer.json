{
    "name": "nova-kit/nova-field-mixins",
    "description": "Laravel Nova Field Mixins",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "NovaKit\\Fields\\Mixins\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NovaKit\\Fields\\Mixins\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.34 || ^11.0"
    },
    "require-dev": {
        "laravel/nova": "dev-develop",
        "nova-kit/nova-packages-tool": "^2.0",
        "larastan/larastan": "^2.0.1",
        "orchestra/testbench": "^8.20 || ^9.0"
    },
    "repositories": {
        "nova": {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "2.x-dev"
        },
        "laravel": {
            "providers": [
                "NovaKit\\Fields\\Mixins\\MixinServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": "@php vendor/bin/phpstan analyse --verbose",
        "test": "@php vendor/bin/phpunit"
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
